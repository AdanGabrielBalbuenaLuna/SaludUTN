<!-- Layout for the editor -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    tools:context=".EditorHistorialMedico">

    <!-- DATE category -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="abrirCalendario">

        <!-- Label -->
        <TextView
            android:text="Fecha:"
            style="@style/CategoryStyle" />

        <!-- Input fields -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingLeft="4dp"
            android:orientation="vertical">

            <!-- Date field -->
            <TextView
                android:id="@+id/et_historial_medico_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:text="@string/hint_date"
                android:fontFamily="sans-serif"
                android:textColor="#AEB6BD"
                style="@style/CategoryStyle"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Diagnostic category -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Label -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Diagnostico"
            style="@style/CategoryStyle" />

        <!-- Input fields -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:paddingLeft="4dp"
            android:orientation="vertical">

            <!-- Matricula field -->
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/et_historial_medico_diagnostic"
                android:hint="Escribe diagnostico"
                android:inputType="textMultiLine"
                android:maxLength="200"
                style="@style/EditorFieldStyle" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/holo_green_dark" />

    <!-- Photo One category -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Label -->
        <ImageView
            android:id="@+id/camera1"
            android:layout_width="@dimen/camera_icon_size"
            android:layout_height="@dimen/camera_icon_size"
            android:src="@drawable/baseline_photo_camera_24"
            android:onClick="tomarFoto"/>

        <!-- Input fields -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingLeft="4dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:scaleType="fitCenter"
                tools:srcCompat="@tools:sample/avatars" />

            <!-- Matricula field -->
            <EditText
                android:id="@+id/et_historial_medico_photo_one"
                style="@style/EditorFieldStyle"
                android:focusableInTouchMode="false"
                android:hint="Foto1"
                android:inputType="textUri"
                android:scrollHorizontally="true"
                android:textColor="#0097A7"
                android:textSize="14sp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/holo_green_dark" />

    <!-- Photo Two category -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/camera2"
            android:layout_width="@dimen/camera_icon_size"
            android:layout_height="@dimen/camera_icon_size"
            android:src="@drawable/baseline_photo_camera_24"
            android:onClick="tomarFoto"/>

        <!-- Input fields -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingLeft="4dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:scaleType="fitCenter"
                tools:srcCompat="@tools:sample/avatars" />

            <EditText
                android:id="@+id/et_historial_medico_photo_two"
                style="@style/EditorFieldStyle"
                android:focusableInTouchMode="false"
                android:hint="Foto2"
                android:inputType="textUri"
                android:scrollHorizontally="true"
                android:textColor="#0097A7"
                android:textSize="14sp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/holo_green_dark" />


    <!-- Price category -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Label -->
        <TextView
            android:layout_width="wrap_content"
            android:text="Precio"
            style="@style/CategoryStyle" />

        <!-- Input fields -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="20"
            android:paddingLeft="4dp"
            android:orientation="horizontal">
            <!-- Units for weight (kg) -->
            <TextView
                android:text="$"
                android:layout_weight="2"
                style="@style/EditorUnitsStyle"/>
            <!-- Matricula field -->
            <EditText
                android:id="@+id/et_historial_medico_price"
                style="@style/EditorFieldStyle"
                android:layout_width="wrap_content"
                android:layout_weight="14"
                android:hint="Precio, sin decimales"
                android:inputType="number"
                android:maxLength="4"
                android:textStyle="bold" />
            <!-- Units for weight (kg) -->
            <TextView
                android:text="MXN"
                android:layout_weight="4"
                style="@style/EditorUnitsStyle"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Doctor category -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Label -->
        <TextView
            android:text="Doctor"
            style="@style/CategoryStyle" />

        <!-- Input fields -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingLeft="4dp"
            android:orientation="vertical">

            <!-- Matricula field -->
            <EditText
                android:id="@+id/et_historial_medico_doctor_name"
                android:hint="Nombre del doctor"
                android:inputType="textCapWords"
                android:maxLength="20"
                style="@style/EditorFieldStyle" />
        </LinearLayout>
    </LinearLayout>

    <!-- Gender category -->
    <LinearLayout
        android:id="@+id/container_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Label -->
        <TextView
            android:text="Especialidad"
            style="@style/CategoryStyle" />

        <!-- Input field -->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <!-- Gender drop-down spinner -->
            <Spinner
                android:id="@+id/spinner_speciality"
                android:layout_height="48dp"
                android:layout_width="wrap_content"
                android:paddingRight="16dp"
                android:spinnerMode="dropdown"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
