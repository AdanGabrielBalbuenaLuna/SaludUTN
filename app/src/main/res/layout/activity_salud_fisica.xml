<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaludFisica">

    <TextView
        android:id="@+id/textView_datos_personales"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:background="#0950BA"
        android:gravity="center"
        android:text="@string/txt_datos_personales"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView_alergias"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_alergias"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:background="#0950BA"
        android:gravity="center"
        android:text="@string/txt_alergias"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView_historial_medico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_datos_personales" />

    <TextView
        android:id="@+id/textView_historial_medico"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="371dp"
        android:background="#0950BA"
        android:gravity="center"
        android:text="@string/txt_historial_medico"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_alergias" />
</androidx.constraintlayout.widget.ConstraintLayout>